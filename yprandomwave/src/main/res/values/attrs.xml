<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="waveGravity" format="enum">
        <enum name="Top" value="1" />
        <enum name="Bottom" value="2" />
    </attr>
    <attr name="direction" format="enum">
        <enum name="Left" value="1" />
        <enum name="Right" value="2" />
    </attr>

    <attr name="numberOfWaves" format="float" />
    <attr name="waveColor" format="color" />
    <attr name="animatorEnable" format="boolean" />

    <declare-styleable name="RandomWave">
        <attr name="waveGravity" />
        <attr name="numberOfWaves" />
        <attr name="waveColor" />
        <attr name="animatorEnable" />
        <attr name="direction" />
    </declare-styleable>
</resources>